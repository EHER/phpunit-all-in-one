<?xml version="1.0" encoding="UTF-8"?>
<package packagerversion="1.4.10" version="2.0"
  xmlns="http://pear.php.net/dtd/package-2.0"
  xmlns:tasks="http://pear.php.net/dtd/tasks-1.0"
  xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
  xsi:schemaLocation="http://pear.php.net/dtd/tasks-1.0
                      http://pear.php.net/dtd/tasks-1.0.xsd
                      http://pear.php.net/dtd/package-2.0
                      http://pear.php.net/dtd/package-2.0.xsd">
 <name>phpcov</name>
 <channel>pear.phpunit.de</channel>
 <summary>TextUI frontend for PHP_CodeCoverage</summary>
 <description>TextUI frontend for PHP_CodeCoverage</description>
 <lead>
  <name>Sebastian Bergmann</name>
  <user>sb</user>
  <email>sb@sebastian-bergmann.de</email>
  <active>yes</active>
 </lead>
 <date>2012-12-28</date>
 <version>
  <release>1.1.0</release>
  <api>1.1.0</api>
 </version>
 <stability>
  <release>stable</release>
  <api>stable</api>
 </stability>
 <license>The BSD 3-Clause License</license>
 <notes>http://github.com/sebastianbergmann/phpcov/tree</notes>
 <contents>
  <dir name="/">
   <dir name="SebastianBergmann">
    <dir name="PHPCOV">
     <file baseinstalldir="/" name="autoload.php" role="php" />
     <file baseinstalldir="/" name="Command.php" role="php" />
     <file baseinstalldir="/" name="Version.php" role="php" />
    </dir>
   </dir>
   <file baseinstalldir="/" name="phpcov.php" role="script">
    <tasks:replace from="/usr/bin/env php" to="php_bin" type="pear-config"/>
    <tasks:replace from="@php_bin@" to="php_bin" type="pear-config" />
   </file>
   <file baseinstalldir="/" name="phpcov.bat" role="script">
    <tasks:replace from="@php_bin@" to="php_bin" type="pear-config" />
    <tasks:replace from="@bin_dir@" to="bin_dir" type="pear-config" />
   </file>
   <file baseinstalldir="/" name="ChangeLog.markdown" role="doc"/>
   <file baseinstalldir="/" name="LICENSE" role="doc"/>
   <file baseinstalldir="/" name="README.markdown" role="doc"/>
  </dir>
 </contents>
 <dependencies>
  <required>
   <php>
    <min>5.3.3</min>
   </php>
   <pearinstaller>
    <min>1.9.4</min>
   </pearinstaller>
   <package>
    <name>ConsoleTools</name>
    <channel>components.ez.no</channel>
    <min>1.6</min>
   </package>
   <package>
    <name>PHPUnit</name>
    <channel>pear.phpunit.de</channel>
    <min>3.7.0</min>
   </package>
   <package>
    <name>PHP_CodeCoverage</name>
    <channel>pear.phpunit.de</channel>
    <min>1.2.0</min>
   </package>
  </required>
 </dependencies>
 <phprelease>
  <installconditions>
   <os>
    <name>windows</name>
   </os>
  </installconditions>
  <filelist>
   <install as="phpcov" name="phpcov.php" />
   <install as="phpcov.bat" name="phpcov.bat" />
  </filelist>
 </phprelease>
 <phprelease>
  <filelist>
   <install as="phpcov" name="phpcov.php" />
   <ignore name="phpcov.bat" />
  </filelist>
 </phprelease>
</package>
